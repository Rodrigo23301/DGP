    <% end %>
</p>
<h1>ADMINISTRADOR</h1>
<p class="navbar-text float-right">
    <% if admin_signed_in? %>
      Logged in as <strong><%= current_admin.email %></strong>.
      <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> 
      <%= button_to "logout", destroy_admin_session_path, method: :delete  %>
    <% else %>
      <%= link_to "Login", new_admin_session_path, :class => 'navbar-link'  %>
      <%= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'  %> 
    <% end %>
</p>
<% if current_admin || current_student || current_teacher%>
  <%= link_to "TAREAS", tasks_path  %>
<% end %>

<% if current_teacher || current_admin%>
  <%= link_to "LISTADO ALUMNOS", students_path %>
<% end %>